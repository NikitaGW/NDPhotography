                font-size: 1.5rem;
            }

            .nav-link {
                padding: 10px 12px !important;
                font-size: 0.85rem;
            }

            .nav-link i {
                font-size: 1rem;
                margin-right: 10px;
            }

            .submenu .nav-link {
                padding: 8px 12px 8px 36px !important;
            }

            .submenu .submenu .nav-link {
                padding-left: 50px !important;
            }

            .topbar-icon {
                font-size: 1.1rem;
            }

            .notification-badge {
                width: 16px;
                height: 16px;
                font-size: 0.6rem;
            }

            .dropdown-menu {
                width: 160px;
                font-size: 0.85rem;
            }

            .dropdown-item {
                padding: 6px 12px;
            }
        }

        @media (max-width: 400px) {
            :root {
                --sidebar-width: 90vw;
            }

            .nav-link {
                padding: 8px 10px !important;
            }

            .submenu .nav-link {
                padding: 6px 10px 6px 32px !important;
            }

            .submenu .submenu .nav-link {
                padding-left: 44px !important;
            }

            .topbar-right {
                gap: 8px;
            }
        }

        /* Section Badges */
        .section-badge {
            display: inline-block;
            padding: 3px 8px;
            font-size: 0.7rem;
            border-radius: 4px;
            background: rgba(255, 255, 255, 0.2);
            margin-left: 5px;
        }

        /* Prevent zooming on input focus on mobile */
        @media screen and (-webkit-min-device-pixel-ratio:0) {
            select,
            textarea,
            input {
                font-size: 16px !important;
            }
        }
    </style>
</head>
