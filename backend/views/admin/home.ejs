    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-bg: #1a1f33;
            --sidebar-color: #b1b9d8;
            --sidebar-active: #3c7fff;
            --topbar-height: 70px;
            --topbar-shadow: 0 2px 10px rgba(0, 0, 0, 0.08);
            --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: #f8f9fc;
            overflow-x: hidden;
            color: #333;
        }
        
        /* Sidebar styling */
        #sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: var(--sidebar-bg);
            color: var(--sidebar-color);
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: var(--topbar-shadow);
            overflow-y: auto;
        }
        
        .sidebar-header {
            padding: 25px 20px;
            background: rgba(0, 0, 0, 0.2);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .sidebar-header .logo {
            width: 40px;
            height: 40px;
            background: var(--sidebar-active);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }
        
        .sidebar-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.3rem;
            margin-bottom: 0;
        }
        
        .sidebar-menu {
            padding: 20px 0;
        }
        
        .nav-link {
            color: var(--sidebar-color);
            padding: 12px 20px;
            margin: 4px 0;
            border-radius: 0;
            transition: all 0.2s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .nav-link:hover, .nav-link.active {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }
        
        .nav-link.active {
            border-left: 4px solid var(--sidebar-active);
            color: white;
        }
        
        .nav-link i {
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
        }
        
        .badge-notification {
            margin-left: auto;
            font-size: 0.75rem;
            padding: 4px 8px;
        }
        
        /* Top navbar styling */
        #topbar {
            height: var(--topbar-height);
            position: fixed;
            top: 0;
            right: 0;
            left: var(--sidebar-width);
            z-index: 999;
            background: white;
            box-shadow: var(--topbar-shadow);
            transition: all 0.3s ease;
            padding: 0 25px;
        }
        
        .topbar-content {
            display: flex;
            align-items: center;
            height: 100%;
            justify-content: space-between;
        }
        
        .topbar-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .topbar-icon {
            position: relative;
            color: #5a6a85;
            font-size: 1.3rem;
            transition: all 0.2s;
            cursor: pointer;
        }
        
        .topbar-icon:hover {
            color: var(--sidebar-active);
        }
        
        .notification-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #dc3545;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.65rem;
            font-weight: 600;
        }
        
        .user-dropdown {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            padding: 5px 10px;
            border-radius: 50px;
            transition: all 0.3s;
        }
        
        .user-dropdown:hover {
            background: #f8f9fa;
        }
        
        .user-dropdown img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }
        
        .user-dropdown .name {
            font-weight: 600;
            font-size: 0.95rem;
            color: #333;
        }
        
        .dropdown-arrow {
            color: #6c757d;
            transition: transform 0.3s;
        }
        
        .user-dropdown:hover .dropdown-arrow {
            color: var(--sidebar-active);
        }
        
        /* Main content styling */
        #content {
            margin-left: var(--sidebar-width);
            margin-top: var(--topbar-height);
            padding: 30px;
            transition: all 0.3s ease;
            min-height: calc(100vh - var(--topbar-height));
        }
        
        .page-header {
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .page-header h1 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 5px;
            color: #2c3e50;
        }
        
        .breadcrumb {
            background: transparent;
            padding: 0;
            font-size: 0.95rem;
            color: #6c757d;
        }
        
        .breadcrumb-item a {
            color: #3c7fff;
            text-decoration: none;
        }
        
        .breadcrumb-item.active {
            color: #6c757d;
        }
        
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--card-shadow);
            transition: transform 0.3s, box-shadow 0.3s;
            border: none;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            flex-shrink: 0;
        }
        
        .bg-primary-light { background-color: rgba(60, 127, 255, 0.15); color: var(--sidebar-active); }
        .bg-success-light { background-color: rgba(40, 167, 69, 0.15); color: #28a745; }
        .bg-warning-light { background-color: rgba(255, 193, 7, 0.15); color: #ffc107; }
        .bg-purple-light { background-color: rgba(111, 66, 193, 0.15); color: #6f42c1; }
        
        .stat-info h5 {
            color: #6c757d;
            font-size: 0.95rem;
            font-weight: 500;
            margin-bottom: 5px;
        }
        
        .stat-info h3 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 0;
            color: #2c3e50;
        }
        
        .stat-trend {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-top: 8px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .trend-up { color: #28a745; }
        .trend-down { color: #dc3545; }
        
        /* Dashboard content */
        .dashboard-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
        }
        
