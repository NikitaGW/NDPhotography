        }
        
        .badge-new { background: rgba(60, 127, 255, 0.15); color: var(--sidebar-active); }
        .badge-progress { background: rgba(255, 193, 7, 0.15); color: #ffc107; }
        .badge-completed { background: rgba(40, 167, 69, 0.15); color: #28a745; }
        
        .chart-placeholder {
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
            border-radius: 8px;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-weight: 500;
        }
        
        .chart-placeholder i {
            font-size: 2rem;
            margin-bottom: 15px;
        }
        
        .chart-placeholder div {
            text-align: center;
        }
        
        .testimonial-item {
            display: flex;
            gap: 15px;
            padding: 15px 0;
            border-bottom: 1px solid #e1e5eb;
        }
        
        .testimonial-item:last-child {
            border-bottom: none;
        }
        
        .testimonial-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            flex-shrink: 0;
        }
        
        .testimonial-content {
            flex: 1;
        }
        
        .testimonial-name {
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .testimonial-event {
            font-size: 0.9rem;
