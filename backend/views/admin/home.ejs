        }
        
        .action-btn {
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.85rem;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }
        
        /* Responsive adjustments */
        .sidebar-toggle {
            display: none;
            font-size: 1.5rem;
            color: #495057;
            cursor: pointer;
        }
        
        @media (max-width: 992px) {
            #sidebar {
                transform: translateX(-100%);
            }
            
            #topbar, #content {
                left: 0;
            }
            
            #content {
                margin-left: 0;
            }
            
            .sidebar-open #sidebar {
                transform: translateX(0);
            }
            
            .sidebar-toggle {
                display: block;
            }
        }
        
        @media (max-width: 768px) {
            .topbar-right .user-dropdown .name {
                display: none;
            }
            
            .dashboard-content {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 576px) {
            :root {
                --topbar-height: 60px;
            }
            
            #content {
                padding: 20px 15px;
            }
            
            .stats-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
